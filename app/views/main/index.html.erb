<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">
        </ul>
      </div>
    </nav>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <a href="lxc/new" class="btn btn-primary">Add New LXC <strong>+</strong></a>
      <h2>Containers</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>LXC Name</th>
              <th>LXD Name</th>
              <th>Image</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="table-data">
            <% @lxclist.each_with_index do |lxc, index| %>
              <tr> 
                <td><%= index+1 %></td> 
                <td><%= lxc["lxc_name"] %></td> 
                <td><%= lxc["lxd_name"] %></td> 
                <td><%= lxc["image"] %></td> 
                <td><%= lxc["status"] %></td> 
              <td> 
                <div class="btn-group" role="group" aria-label="Basic example"> 
                  <a href="/lxc/updatestate/<%=lxc["id"]%>/<%= lxc["lxc_name"]%>/start" class="btn btn-primary">Start</a> 
                  <a href="/lxc/updatestate/<%=lxc["id"]%>/<%= lxc["lxc_name"]%>/stop" class="btn btn-secondary">Stop</a> 
                  <a href="/lxc/delete/<%=lxc["id"]%>" class="btn btn-danger">Delete</a> 
                </div> 
              </td> 
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
