<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
                <label for="service-name">Service Name</label>
                <input type="text" class="form-control" id="service-name" placeholder="Enter service name" required>
            </div>

             <div class="form-group">
                <label for="lxd-port">Host Port</label>
                <input type="text" class="form-control" id="lxd-port" placeholder="Enter host port" required>
            </div>

            <div class="form-group">
                <label for="lxc-port">LXC Port</label>
                <input type="text" class="form-control" id="lxc-port" placeholder="Enter lxc port" required>
            </div>

            <button class="btn btn-primary" onclick="createNewLxcService()">Create</button>
        </div>
    </div>
</div>